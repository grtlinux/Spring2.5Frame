<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans   
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context   
       http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:annotation-config />
	
	<bean name="monitor" class="kame.spring.chap02.annot.SystemMonitor">
	</bean>

	<bean id="smsSender" class="kame.spring.chap02.annot.SmsSender">
		<constructor-arg value="true" />
	</bean>
	
	<bean id="smsSender2" class="kame.spring.chap02.annot.SmsSender">
		<constructor-arg value="true" />
	</bean>
	
	<bean id="sensor1" class="kame.spring.chap02.annot.SensorImpl" />
	<bean id="sensor2" class="kame.spring.chap02.annot.SensorImpl" />
	<bean id="sensor3" class="kame.spring.chap02.annot.SensorImpl" />
	
	<bean id="lobbyCamera" class="kame.spring.chap02.annot.Camera">
		<qualifier value="main" />
	</bean>
	
	<bean id="elevator1Camera" class="kame.spring.chap02.annot.Camera">
	</bean>

</beans>